@model JointTrips.Models.Trip

@{
    ViewData["Title"] = "Manage Trip Ownership";
}

<h2>Manage Secondary Ownership</h2>

<form asp-action="ManageOwnership" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="secondaryOwnerId">Select user to grant secondary ownership</label>
        <select class="form-control" name="secondaryOwnerId">
            <option value="">-- Remove Secondary Owner --</option>
            @if (ViewBag.Users != null)
            {
                foreach (var user in ViewBag.Users)
                {
                    var isSelected = Model.SecondaryOwnerId?.ToString() == user.Id?.ToString();
                    <option value="@user.Id" selected="@(isSelected ? "selected" : null)">
                        @user.UserName
                    </option>
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

<div class="mt-3">
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Back to Trip</a>
</div>
